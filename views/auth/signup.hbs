<div class="row justify-content-center">
    <div class="col-md-6">

        <h1>Sign Up</h1>

        <a id="login" href="/login" class="btn btn-dark">Log into a existing Account</a>


        <form action="/signup" method="POST">
            <div class="form-group">
                <label for="field1">Username</label>
                <input name="username" type="text" class="form-control" id="field1">
            </div>
            <div class="form-group">
                <label for="field2">Name</label>
                <input name="name" type="text" class="form-control" id="field2">
            </div>
            <div class="form-group">
                <label for="field3">Password</label>
                <input name="password" type="password" class="form-control" id="field3">
            </div>
            <div class="form-group">
                <label for="field4">Description</label>
                <input name="description" type="text" class="form-control" id="field4">
            </div>
            <div class="form-group">
                <label for="field5">Facebook Id</label>
                <input name="facebookId" type="text" class="form-control" id="field5">
            </div>
            <div class="form-group">
                <label for="field6">Role</label>
                <input name="role" type="text" class="form-control" id="field6">
            </div>

            <button type="submit" class="btn btn-dark btn-block btn-lg">Sign In</button>


            {{#if errorMsg}}
            <div id="errorMsg">{{{errorMsg}}}</div>
            {{/if}}
        </form>
    </div>
</div>